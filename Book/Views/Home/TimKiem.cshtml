@model System.Data.DataTable
@{
    ViewBag.Title = "Tìm kiếm sản phẩm";
}
<h2>Tìm sản phẩm theo giá</h2>
<form method="post" asp-action="TimKiem" asp-controller="Home">
    <label>Từ giá: </label>
    <input type="number" name="min" />
    <label>Đến giá: </label>
    <input type="number" name="max" />
    <button type="submit">Tìm</button>
</form>

@if (Model != null && Model.Rows.Count > 0)
{
    <hr />
    <table class="table">
        <thead>
            <tr><th>Tên sản phẩm</th><th>Giá</th></tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow r in Model.Rows)
            {
                <tr>
                    <td>@r["TenSP"]</td>
                    <td>@String.Format("{0:#,##0}", r["Gia"]) đ</td>
                </tr>
            }
        </tbody>
    </table>
}
